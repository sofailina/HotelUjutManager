<Window x:Class="HotelUjutManager.PaymentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelUjutManager"
        mc:Ignorable="d"
        Title="PaymentsWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Данные платежа" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="5">
                    <Label Content="Бронирование:"/>
                    <ComboBox x:Name="CmbBooking" Height="25"/>

                    <Label Content="Сумма:" Margin="0,10,0,0"/>
                    <TextBox x:Name="TxtAmount" Height="25"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="5">
                    <Label Content="Дата платежа:"/>
                    <DatePicker x:Name="DpPaymentDate" Height="25"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="5">
                    <Label Content="Статус:"/>
                    <ComboBox x:Name="CmbStatus" Height="25">
                        <ComboBoxItem Content="Оплачено" IsSelected="True"/>
                        <ComboBoxItem Content="Ожидает оплаты"/>
                        <ComboBoxItem Content="Отменено"/>
                        <ComboBoxItem Content="Возврат"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="BtnAdd" Content="Добавить" Width="100" Height="30" Margin="5" Click="BtnAdd_Click"/>
            <Button x:Name="BtnSave" Content="Сохранить" Width="100" Height="30" Margin="5" Click="BtnSave_Click"/>
            <Button x:Name="BtnDelete" Content="Удалить" Width="100" Height="30" Margin="5" Click="BtnDelete_Click"/>
            <Button x:Name="BtnClear" Content="Очистить" Width="100" Height="30" Margin="5" Click="BtnClear_Click"/>
        </StackPanel>

        <DataGrid x:Name="DgPayments" Grid.Row="2" Margin="10" 
                  AutoGenerateColumns="True" 
                  SelectionChanged="DgPayments_SelectionChanged"
                  SelectionMode="Single"
                  IsReadOnly="True">
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="BtnRefresh" Content="Обновить" Width="100" Height="30" Margin="5" Click="BtnRefresh_Click"/>
            <Button x:Name="BtnClose" Content="Закрыть" Width="100" Height="30" Margin="5" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
