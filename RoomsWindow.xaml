<Window x:Class="HotelUjutManager.RoomsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelUjutManager"
        mc:Ignorable="d"
        Title="RoomsWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Данные номера" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="5">
                    <Label Content="Номер комнаты:"/>
                    <TextBox x:Name="TxtRoomNumber" Height="25"/>

                    <Label Content="Этаж:" Margin="0,10,0,0"/>
                    <TextBox x:Name="TxtFloor" Height="25"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="5">
                    <Label Content="Тип номера:"/>
                    <ComboBox x:Name="CmbRoomType" Height="25"/>

                    <Label Content="Статус:" Margin="0,10,0,0"/>
                    <ComboBox x:Name="CmbStatus" Height="25">
                        <ComboBoxItem Content="Свободен" IsSelected="True"/>
                        <ComboBoxItem Content="Занят"/>
                        <ComboBoxItem Content="На обслуживании"/>
                        <ComboBoxItem Content="Недоступен"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="5">
                    <Label Content="Вместимость:"/>
                    <TextBox x:Name="TxtCapacity" Height="25"/>

                    <Label Content="Цена за ночь:" Margin="0,10,0,0"/>
                    <TextBox x:Name="TxtPricePerNight" Height="25"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="BtnAdd" Content="Добавить" Width="100" Height="30" Margin="5" Click="BtnAdd_Click"/>
            <Button x:Name="BtnSave" Content="Сохранить" Width="100" Height="30" Margin="5" Click="BtnSave_Click"/>
            <Button x:Name="BtnDelete" Content="Удалить" Width="100" Height="30" Margin="5" Click="BtnDelete_Click"/>
            <Button x:Name="BtnClear" Content="Очистить" Width="100" Height="30" Margin="5" Click="BtnClear_Click"/>
        </StackPanel>

        <DataGrid x:Name="DgRooms" Grid.Row="2" Margin="10" 
                  AutoGenerateColumns="True" 
                  SelectionChanged="DgRooms_SelectionChanged"
                  SelectionMode="Single"
                  IsReadOnly="True">
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="BtnRefresh" Content="Обновить" Width="100" Height="30" Margin="5" Click="BtnRefresh_Click"/>
            <Button x:Name="BtnClose" Content="Закрыть" Width="100" Height="30" Margin="5" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
