<Window x:Class="HotelUjutManager.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelUjutManager"
        mc:Ignorable="d"
        Title="ReportsWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Параметры отчета" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="5">
                    <Label Content="Тип отчета:"/>
                    <ComboBox x:Name="CmbReportType" Height="25">
                        <ComboBoxItem Content="Загрузка номеров" IsSelected="True"/>
                        <ComboBoxItem Content="Финансовый отчет"/>
                        <ComboBoxItem Content="Отчет по уборке"/>
                        <ComboBoxItem Content="Отчет по бронированиям"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="5">
                    <Label Content="Начало периода:"/>
                    <DatePicker x:Name="DpPeriodStart" Height="25"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="5">
                    <Label Content="Конец периода:"/>
                    <DatePicker x:Name="DpPeriodEnd" Height="25"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="BtnGenerate" Content="Сформировать" Width="120" Height="30" Margin="5" Click="BtnGenerate_Click"/>
            <Button x:Name="BtnSave" Content="Сохранить отчет" Width="120" Height="30" Margin="5" Click="BtnSave_Click"/>
            <Button x:Name="BtnClear" Content="Очистить" Width="100" Height="30" Margin="5" Click="BtnClear_Click"/>
        </StackPanel>

        <DataGrid x:Name="DgReport" Grid.Row="2" Margin="10" 
                  AutoGenerateColumns="True" 
                  IsReadOnly="True">
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="BtnExport" Content="Экспорт в Excel" Width="120" Height="30" Margin="5" Click="BtnExport_Click"/>
            <Button x:Name="BtnPrint" Content="Печать" Width="100" Height="30" Margin="5" Click="BtnPrint_Click"/>
            <Button x:Name="BtnClose" Content="Закрыть" Width="100" Height="30" Margin="5" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
